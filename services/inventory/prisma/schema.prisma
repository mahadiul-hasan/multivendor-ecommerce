generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Inventory {
    id        String @id @default(cuid())
    sku       String @unique
    productId String @unique
    quantity  Int

    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    histories History[]

    @@map("inventory")
}

enum ActionType {
    IN
    OUT
}

model History {
    id              String     @id @default(cuid())
    actionType      ActionType
    quantityChanged Int
    lastQuantity    Int
    newQuantity     Int

    inventoryId String
    inventory   Inventory @relation(fields: [inventoryId], references: [id])

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("history")
}
